{
    // Подробнее о параметрах - https://www.typescriptlang.org/docs/handbook/tsconfig-json.html

    "compilerOptions": {
      "module": "CommonJS",
      "target": "ES2021",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "outDir": "_build",
      "allowJs": true,
      "checkJs": true,
      "noImplicitAny": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "importHelpers": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true, // Пока не исправят багу в discord.js
    },
    "exclude": [
      "node_modules",
      "_build"
    ]
}